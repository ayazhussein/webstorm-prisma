# Build the docker image with `npx nx docker-build example-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t example-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system example-api && \
          adduser --system -G example-api example-api

COPY dist/apps/example-api example-api/
RUN chown -R example-api:example-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix example-api --omit=dev -f install

CMD [ "node", "example-api" ]
