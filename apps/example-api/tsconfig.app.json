{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "node"
    ],
    "typeRoots": [
      "../../node_modules/@types",
      "../../@types"
    ],
    "strict": true,
    "strictNullChecks": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "esModuleInterop": true
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
  ],
  "include": [
    "src/**/*.ts"
  ]
}
